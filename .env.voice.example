# Voice Interview System Environment Variables

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI Services (Choose at least one)
# OpenAI (for GPT-4 and Whisper)
OPENAI_API_KEY=your-openai-api-key

# Anthropic (for Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Cloud (for Speech-to-Text and Text-to-Speech)
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key

# ElevenLabs (for high-quality TTS)
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Deepgram (alternative STT)
DEEPGRAM_API_KEY=your-deepgram-api-key

# Backend Configuration (if using Python backend)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=production

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Feature Flags
ENABLE_VOICE_INTERVIEW=true
ENABLE_WEB_SPEECH_API=true
ENABLE_BACKEND_TTS=false

# Audio Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_DURATION_MS=2000
MAX_RECORDING_DURATION_MINUTES=60

# Interview Settings
DEFAULT_INTERVIEW_QUESTIONS=8
MIN_RESPONSE_LENGTH=20
MAX_RESPONSE_LENGTH=500
INTERVIEW_TIMEOUT_MINUTES=45

# Export Settings
ENABLE_PDF_EXPORT=true
PDF_TEMPLATE=professional
