# Backend Environment Variables

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_key

# AI Provider Configuration (claude or openai)
AI_PROVIDER=claude
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key

# Speech-to-Text Configuration (openai, deepgram, or whisper)
STT_PROVIDER=openai
STT_API_KEY=your_stt_api_key
DEEPGRAM_API_KEY=your_deepgram_api_key

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# File Storage
UPLOAD_DIR=/tmp/interview_uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Session Configuration
SESSION_TIMEOUT=3600  # 1 hour in seconds
MAX_RECORDING_DURATION=1800  # 30 minutes in seconds
